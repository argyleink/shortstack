{
  "name": "shortstack",
  "version": "1.1.7",
  "author": "Adam Argyle",
  "description": "rollup & postcss bundler starter",
  "license": "ISC",
  "main": "index.js",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "dev:wmr": "wmr",
    "dev:css": "postcss public/css/index.css -o public/css/bundle.css -w",
    "start": "concurrently --kill-others npm:dev:*",
    "production": "wmr serve --http2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "postcss": "7.0.31",
    "postcss-cli": "7.1.1",
    "postcss-easings": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-import-url": "^5.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "6.7.0",
    "wmr": "0.0.12"
  }
}
